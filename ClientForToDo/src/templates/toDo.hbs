<div class="container justify-content-center">
    <div class="row justify-content-center">
        <section class="todo col-sm-10 col-md-7 mt-5">
            <div class="newTask">
                <form id="newTaskForm" action="" name="newTaskForm" class="newTaskForm">
                    <div class="form-group">
                        <input id="newTitle" type="text" class="form-control taskTitle" placeholder="Task Title">
                        <textarea id="newText" class="form-control taskText" placeholder="Task Text"></textarea>
                        <input type="submit" id="addTask" class="btn btn-primary mt-2" value="Add">
                    </div>
                </form>
            </div>
            <div class="tasks">
                <ul id="tasksList" class="tasksList">
                    {{#each tasks}}
                        {{> partials/task}}
                    {{/each}}
                </ul>
            </div>
            <button id="clearAll" class="btn btn-success" title="Clear all">Clear all</button>
            <button class="btn btn-success" title="Edit Task" data-toggle="modal" data-target="#myModalBox">Modal</button>
            <div id="myModalBox" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title">Заголовок модального окна</h4>
                </div>
                <div class="modal-body">
                    Содержимое модального окна...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                    <button type="button" class="btn btn-primary">Сохранить изменения</button>
                </div>
                </div>
            </div>
        </div>
        </section>
    </div>     
</div>